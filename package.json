{
	"name": "dmg-read-more",
	"version": "0.1.0",
	"description": "Wordpress plugin that contains a Gutenberg block for inserting stylized post links and a WP-CLI search command",
	"author": "Dylan de Bruijn",
	"license": "GPL-2.0-or-later",
	"main": "build/index.js",
	"scripts": {
		"build": "wp-scripts build --experimental-modules --blocks-manifest",
		"lint:js": "wp-scripts lint-js --max-warnings=0",
		"format:js": "wp-scripts lint-js --fix",
		"lint:php": "composer run lint",
		"format:php": "composer run format",
		"lint:css": "stylelint \"**/*.scss\" --max-warnings=0",
		"format:css": "stylelint \"**/*.scss\" --fix",
		"lint": "npm run lint:js && npm run lint:php && npm run lint:css",
		"format": "npm run format:js && npm run format:php && npm run format:css",
		"packages-update": "wp-scripts packages-update",
		"plugin-zip": "wp-scripts plugin-zip",
		"start": "wp-scripts start --experimental-modules --blocks-manifest"
	},
	"devDependencies": {
		"@wordpress/block-editor": "^15.11.0",
		"@wordpress/blocks": "^15.11.0",
		"@wordpress/components": "^32.0.0",
		"@wordpress/compose": "^7.38.0",
		"@wordpress/data": "^10.38.0",
		"@wordpress/element": "^6.38.0",
		"@wordpress/eslint-plugin": "^24.0.0",
		"@wordpress/i18n": "^6.11.0",
		"@wordpress/prettier-config": "^4.38.0",
		"@wordpress/scripts": "^30.22.0",
		"@wordpress/stylelint-config": "^23.30.0",
		"eslint-config-prettier": "^10.1.8",
		"stylelint": "^16.26.1",
		"stylelint-scss": "^6.14.0"
	},
	"dependencies": {
		"@wordpress/html-entities": "^4.38.0"
	}
}
